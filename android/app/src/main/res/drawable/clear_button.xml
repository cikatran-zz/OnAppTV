<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="16dp"></corners>
            <solid android:color="@color/colorClear"></solid>
            <stroke android:width="1dp" android:color="@color/colorWhite25" />
        </shape>

    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="16dp"></corners>
            <solid android:color="@color/colorBlack20"></solid>
            <stroke android:width="1dp" android:color="@color/colorWhite45" />
        </shape>
    </item>
</selector>