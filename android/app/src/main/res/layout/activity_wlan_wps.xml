<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <SeekBar
        android:id="@+id/wlan_wps_change_alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STBâ€˜s Wifi connection"
        android:textSize="17dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="5dp"
        android:textColor="@color/colorGrayText"
        android:id="@+id/wlan_wps_topic" />

    <com.onapptv.ConnectionView.Custom.View.Swiper.SwiperView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/wlan_wps_swiperView"/>


    <Button
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:id="@+id/wlan_wps_close"
        android:background="@drawable/start_wifi_connect_close"
        android:layout_marginVertical="4dp"
        android:layout_marginRight="18dp"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="223dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/colored_button"
        android:gravity="center"
        android:text="Search your STB"
        android:textColor="@color/colorWhite"
        android:textSize="17dp"
        android:layout_marginVertical="408dp"
        android:visibility="invisible"
        android:id="@+id/wlan_wps_wps" />
</RelativeLayout>