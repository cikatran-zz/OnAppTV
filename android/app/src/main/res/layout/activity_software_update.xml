<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/software_update_rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:id="@+id/software_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack13">
    </View>

    <SeekBar
        android:id="@+id/software_update_change_alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/software_update_topic"
        android:layout_centerHorizontal="true"
        android:textSize="17dp"
        android:textColor="@color/colorWhite"
        android:layout_marginVertical="5dp" />

    <RelativeLayout
        android:layout_width="266dp"
        android:layout_height="382dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/start_mask"
        android:visibility="invisible"
        android:layout_marginVertical="70dp"
        android:id="@+id/software_update_background_stb_none">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/software_update_background_stb_none_label"
            android:layout_centerHorizontal="true"
            android:text="No STB installed\non your local network !"
            android:textSize="17dp"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:layout_marginVertical="115dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:id="@+id/software_update_on"
        android:textSize="92dp"
        android:text="ON"
        android:textStyle="bold"
        android:layout_marginVertical="209.5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/software_update_on"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/software_update_on"
        android:layout_toRightOf="@+id/software_update_on"
        android:id="@+id/software_update_stb"
        android:text="STB"
        android:textColor="@color/colorWhite"
        android:textSize="9dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Few more steps !"
        android:textSize="25dp"
        android:textColor="@color/colorWhite"
        android:id="@+id/software_update_sub_title"
        android:layout_marginVertical="317dp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="17dp"
        android:textColor="@color/colorWhite"
        android:id="@+id/software_update_content"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="If there is no signal or the quality is too low\nadjust your antenna using these bargraphs"
        android:textSize="13dp"
        android:textColor="#8EF4FBFF"
        android:id="@+id/software_update_bottom_label"
        android:layout_marginVertical="477dp"
        android:gravity="center"
        android:visibility="invisible" />

    <com.onapptv.ConnectionView.Custom.View.Loading.LoadingView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/software_update_loadingView"
        android:visibility="visible"
        app:indicatorColor="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="473dp" />

    <Button
        android:layout_width="223dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/colored_button"
        android:gravity="center"
        android:text="Install a new STB"
        android:textColor="@color/colorWhite"
        android:textSize="17dp"
        android:layout_marginVertical="488dp"
        android:id="@+id/software_update_install"
        android:visibility="invisible" />

    <Button
        android:layout_width="223dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/clear_button"
        android:gravity="center"
        android:text="Next"
        android:textColor="@color/colorWhite"
        android:textSize="17dp"
        android:layout_marginVertical="537dp"
        android:id="@+id/software_update_next"
        android:visibility="invisible" />
</RelativeLayout>
    </FrameLayout>
