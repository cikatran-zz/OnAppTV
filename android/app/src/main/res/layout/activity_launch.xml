<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/selfColorRed">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_centerInParent="true"
            android:id="@+id/ontv_on"
            android:textSize="92dp"
            android:text="ON"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ontv_on"
            android:layout_marginLeft="-3dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/ontv_on"
            android:layout_toRightOf="@+id/ontv_on"
            android:id="@+id/ontv_stb"
            android:text="STB"
            android:textColor="@color/colorWhite"
            android:textSize="9dp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
